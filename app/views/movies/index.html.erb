<center>
  <h1>Welcome <%= current_user.name %>!</h1>

  <%= button_to 'Find Top Rated Movies', '/movies', :params => {:q => "top rated"}, method: :get %>
  <%= form_tag movies_path, method: :get do %>
    <%= search_field_tag :search, nil, placeholder: 'Search by movie title' %>
    <%= submit_tag 'Find Movies' %>
  <% end %>
</center>
<br>
<% @movies.each do |movie| %>
  <section id="movie">
    <p><%= link_to movie[:title], "/movies/#{movie[:id]}" %></p>
    <p>Vote Average: <%= movie[:vote_average] %></p>
  </section>
<% end %>
