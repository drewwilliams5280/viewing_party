<h1>Welcome <%= current_user.name %>!</h1>

<%= button_to 'Discover Movies', '/discover', method: :get %>

<section id='friends-<%=current_user.id%>'>
  <h2>Friends</h2>
  <%= form_tag "/friendship" do %>

    <%= label_tag :email %>
    <%= text_field_tag :email, 'Friends Email' %>

    <%= submit_tag 'Add Friend' %>
  <% end %>
<br>

<% if !current_user.friends.empty? %>
  <% current_user.friends.each do |friend| %>
    <p>Name: <%= friend.name %></p>
  <% end %>
<% else %>
  <h5>You currently have no friends added yet</h5>
<% end %>
</section>
